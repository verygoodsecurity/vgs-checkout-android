<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/vgs_checkout_margin_padding_size_small">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvTitle"
        style="@style/VGSCheckout.Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/ibClear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/vgs_checkout_card_holder_subtitle" />

    <ViewStub
        android:id="@+id/viewStub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ibClear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtvTitle" />

    <!--TODO: Fix icon tint-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ibClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/vgs_checkout_margin_padding_size_medium"
        android:src="@drawable/vgs_checkout_ic_round_cancel_white_24dp"
        android:tint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>