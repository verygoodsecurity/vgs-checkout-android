<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:paddingBottom="@dimen/vgs_checkout_margin_padding_size_large">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/vgs_checkout_margin_padding_size_medium"
            app:srcCompat="@drawable/vgs_checkout_ic_baseline_arrow_back_24" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/VGSCheckout.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/vgs_checkout_margin_padding_size_medium"
            android:layout_marginEnd="@dimen/vgs_checkout_margin_padding_size_medium"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/vgs_checkout_form_title"
            android:textSize="@dimen/vgs_checkout_title_text_size" />

        <com.google.android.material.button.MaterialButton
            style="@style/VGSCheckout.Button.ApplePay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/vgs_checkout_margin_padding_size_medium"
            android:layout_marginTop="@dimen/vgs_checkout_margin_padding_size_large"
            android:layout_marginEnd="@dimen/vgs_checkout_margin_padding_size_medium" />

        <com.google.android.material.button.MaterialButton
            style="@style/VGSCheckout.Button.GooglePay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/vgs_checkout_margin_padding_size_medium"
            android:layout_marginTop="@dimen/vgs_checkout_margin_padding_size_xsmall"
            android:layout_marginEnd="@dimen/vgs_checkout_margin_padding_size_medium"
            android:text="Google Pay"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            style="@style/VGSCheckout.Button.PayPal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconTint="@null"
            android:layout_marginStart="@dimen/vgs_checkout_margin_padding_size_medium"
            android:layout_marginTop="@dimen/vgs_checkout_margin_padding_size_xsmall"
            android:layout_marginEnd="@dimen/vgs_checkout_margin_padding_size_medium" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/vgs_checkout_margin_padding_size_medium"
            android:layout_marginTop="@dimen/vgs_checkout_margin_padding_size_medium"
            android:layout_marginEnd="@dimen/vgs_checkout_margin_padding_size_medium"
            android:background="@drawable/vgs_checkout_rounded_border_bg_white"
            android:orientation="vertical"
            android:padding="@dimen/vgs_checkout_margin_padding_size_medium">

            <com.google.android.material.textview.MaterialTextView
                style="@style/VGSCheckout.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vgs_checkout_form_card_details_title" />

            <com.verygoodsecurity.vgscheckout.view.checkout.card.CreditCardView
                android:id="@+id/creditCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vgs_checkout_margin_padding_size_small" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/VGSCheckout.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vgs_checkout_margin_padding_size_medium"
                android:text="@string/vgs_checkout_billing_address_title" />

            <com.verygoodsecurity.vgscheckout.view.checkout.address.AddressView
                android:id="@+id/addressView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vgs_checkout_margin_padding_size_small" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbPay"
                style="@style/VGSCheckout.Button.Pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vgs_checkout_margin_padding_size_large"
                android:layout_marginBottom="@dimen/vgs_checkout_margin_padding_size_large"
                android:text="@string/vgs_checkout_pay_button_title" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>