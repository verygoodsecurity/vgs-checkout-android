<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:paddingBottom="@dimen/vgs_checkout_margin_padding_size_large">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vgs_checkout_margin_padding_size_medium"
        app:cardCornerRadius="@dimen/vgs_checkout_margin_padding_size_small"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/vgs_checkout_margin_padding_size_medium">

            <com.verygoodsecurity.vgscheckout.view.checkout.VGSCheckoutPersonNameView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:vgs_checkout_hint="@string/vgs_checkout_card_holder_hint"
                app:vgs_checkout_subtitle="@string/vgs_checkout_card_holder_subtitle" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</ScrollView>