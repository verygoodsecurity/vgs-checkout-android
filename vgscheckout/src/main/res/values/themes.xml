<resources>

    <style name="VGSCheckout" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/vgs_checkout_color_primary</item>
        <item name="colorSecondary">@color/vgs_checkout_color_secondary</item>
        <item name="colorAccent">@color/vgs_checkout_color_accent</item>

        <item name="android:textColorPrimary">@color/vgs_checkout_text_color_state_list</item>
        <item name="android:textColorSecondary">@color/vgs_checkout_text_color_state_list</item>

        <item name="textAppearanceCaption">@style/VGSCheckout.TextAppearance.Caption</item>
        <item name="textAppearanceBody2">@style/VGSCheckout.TextAppearance.Body2</item>
        <item name="textAppearanceSubtitle1">@style/VGSCheckout.TextAppearance.Subtitle1</item>
    </style>

    <!--    Text styles-->
    <style name="VGSCheckout.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="VGSCheckout.TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="VGSCheckout.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <!--    VGS Views Styles-->
    <style name="VGSCheckout.InputField" parent="VGSCheckout.TextAppearance.Subtitle1">
        <item name="textColor">@color/vgs_checkout_text_color_state_list</item>
        <item name="android:textColor">@color/vgs_checkout_text_color_state_list</item>
        <item name="textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="VGSCheckout.Title">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
    </style>

    <style name="VGSCheckout.Description">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="drawableTint">@color/vgs_checkout_error_icon_tint</item>
    </style>

    <style name="VGSCheckout.ErrorText">
        <item name="android:textColor">@color/vgs_checkout_text_error</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="VGSCheckout.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/vgs_checkout_pay_text</item>
        <item name="backgroundTint">@color/vgs_checkout_pay_button_background_state_list</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/vgs_checkout_margin_padding_size_small</item>
        <item name="iconTint">@color/vgs_checkout_pay_icon_tint</item>
    </style>
</resources>