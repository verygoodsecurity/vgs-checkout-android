<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.verygoodsecurity.vgscheckout.demo">

    <application
        android:icon="@mipmap/ic_launcher"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VGSCheckoutDemo"
        tools:replace="android:networkSecurityConfig"
        tools:targetApi="n">

        <activity
            android:name="com.verygoodsecurity.vgscheckout.demo.MainActivity"
            android:exported="true"
            android:label="@string/main_activity_title">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.verygoodsecurity.vgscheckout.demo.custom.CustomCheckoutActivity"
            android:label="@string/custom_flow_title" />

        <activity
            android:name="com.verygoodsecurity.vgscheckout.demo.payment.PaymentCheckoutActivity"
            android:label="@string/payment_flow_title" />

        <activity
            android:name="com.verygoodsecurity.vgscheckout.demo.settings.CheckoutSettingsActivity"
            android:label="@string/settings_title" />
    </application>
</manifest>
